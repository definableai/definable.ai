# Webhook server configuration
# Copy this to .env and fill in the values

# Required — GitHub webhook secret (generate with: openssl rand -hex 32)
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Required — Anthropic API key for Claude Code
ANTHROPIC_API_KEY=sk-ant-...

# Optional — OpenAI key for running tests that need it
OPENAI_API_KEY=sk-...

# Paths (defaults work for standard setup)
REPO_PATH=/opt/definable/repo
LOG_DIR=/opt/definable/logs

# Server
PORT=9876

# Behavior
ALLOWED_LABELS=claude-fix,bug
SKIP_LABELS=wontfix,duplicate,question,needs-human,discussion,enhancement
MAX_CONCURRENT_FIXES=1
AUTOFIX_ON_OPEN=false
